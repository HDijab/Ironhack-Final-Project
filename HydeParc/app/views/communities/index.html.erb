<div class="container-fluid">
  <div class="row">
    <%= render partial: "shared/top_banner", locals: {title: "Community List"} %>
  </div>
  <div class="row profile">
    <div class="col-xs-offset-2 col-xs-8">
      <ul class="list-unstyled scrollable">
        <% @communities.each do |community| %>
          <li class="container-fluid list-item">
            <div class="row">
              <div class="col-xs-1">
                <div class="row">
                  <div class="col-xs-12">
                    <a href=<%= "/communities/#{community.id}" %>> <%= image_tag "placholderCommunity.png", class:"thumb" %> </a>
                  </div>
                  <div class="col-xs-12" style="text-align: center">
                    <%= link_to "Join", communities_path %>
                  </div>
                </div>
              </div>
              <div class="col-xs-11">
                <p> <strong> <%= community.name %> </strong> </p>
              </div>
              <div class="col-xs-11">
                <p> <strong> <%= community.about %> </strong> </p>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
