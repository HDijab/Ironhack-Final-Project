<div class="container-fluid">
  <div class="row">
    <% if @user.id == current_user.id %>
      <%= render partial: "shared/top_banner", locals: {title: "Welcome, #{@user.nickname}!"} %>
    <% else %>
      <%= render partial: "shared/top_banner", locals: {title: "Welcome to #{@user.nickname}'s profile #{current_user.nickname}!"} %>
    <% end %>
  </div>
  <div class="row profile">
    <section class="col-xs-3">
      <%= image_tag "placeholder.jpg", class:"image" %>
    </section>
    <section class="col-xs-5">
      <h2>Profile</h2>
      <div class="row profile">
        <div class="col-xs-12">
          <span class="userLabel"> First Name: </span>
          <span class="userInfo"> <%= @user.first_name %> </span>
        </div>
        <div class="col-xs-12">
          <span class="userLabel"> Last Name: </span>
          <span class="userInfo"> <%= @user.last_name %> </span>
        </div>
        <div class="col-xs-12">
          <span class="userLabel"> Telephone: </span>
          <span class="userInfo"> <%= @user.telephone %> </span>
        </div>
        <div class="col-xs-12">
          <span class="userLabel"> City: </span>
          <span class="userInfo"> <%= @user.city %> </span>
        </div>
        <div class="col-xs-12">
          <span class="userLabel"> Country: </span>
          <span class="userInfo"> <%= @user.country %> </span>
        </div>
        <div class="col-xs-12">
          <span class="userLabel"> Address: </span>
          <span class="userInfo"> <%= @user.address %> </span>
        </div>
        <div class="col-xs-12">
          <span class="userLabel"> Gender: </span>
          <span class="userInfo"> <%= @user.gender %> </span>
        </div>
        <div class="col-xs-12">
          <span class="userLabel"> Date Of Birth: </span>
          <% if @user.date_of_birth %> 
            <span class="userInfo"> <%= "#{@user.date_of_birth} (#{@age})" %> </span>
          <% end %>
        </div>
        <div class="col-xs-12">
          <span class="userLabel"> Occupation: </span>
          <span class="userInfo"> <%= @user.occupation %> </span>
        </div>
        <div class="col-xs-12">
          <span class="userLabel"> About: </span>
          <span class="userInfo"> <%= @user.about %> </span>
        </div>
      </div>
    </section>
    <section class="col-xs-4">
      <h2>Current Communites:</h2>
      <ul class="list-unstyled scrollable">
        <% @user.communities.each do |community| %>
          <li class="container-fluid list-item">
            <div class="row">
              <div class="col-xs-2">
                <a href=<%= "/communities/#{community.id}" %>> <%= image_tag "placholderCommunity.png", class:"thumb" %> </a>
              </div>
              <div class="col-xs-10">
                <p> <strong> <%= community.name %> </strong> </p>
              </div>
              <div class="col-xs-10">
                <p> <strong class="text-capitalize"> <%= community.community_members.first.role %> </strong> </p>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </section>
  </div>
</div>
